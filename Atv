    private void jButtonStartActionPerformed (java.awt.event.ActionEvent evt) {// GEN-FIRST: event_jButtonStartActionPerformed
        Nome da string = jTextFieldName.getText ();
        String lastName = jTextFieldSurname.getText ();
        float weight = Float.parseFloat (jTextFieldWeight.getText ());
        float height = Float.parseFloat (jTextFieldHeight.getText ());
        float imc = peso / (altura * altura);
        int genderBox = jComboBoxGender.getSelectedIndex (); // índice 0-Masculino / índice 1-feminino
        String [] classificação = nova String [] {"Abaixo do normal", "Normal", "Acima do normal", "Obesidade"};
        Gênero da corda;
        if (genderBox == 0)
        {
            gênero = "Sr.";
        }outro
        {
            gênero = "Sra.";
        }
        if (imc <= 18,5)
        {
           JOptionPane.showMessageDialog (null, "Olá" + gênero + nome + sobrenome + ", seu imc é:" + imc + ", classificado como:" + classificação [0]); 
        }
        else if (imc> 18,5 && imc <= 25,0)
        {
           JOptionPane.showMessageDialog (null, "Olá" + gênero + nome + sobrenome + ", seu imc é:" + imc + ", classificado como:" + classificação [1]); 
        }
        else if (imc> 25,0 && imc <= 30,0)
        {
            JOptionPane.showMessageDialog (null, "Hello" + gênero + nome + sobrenome + ", seu imc é:" + imc + ", classificado como:" + classificação [2]);
        }
        else if (imc> 30,0)
        {
            JOptionPane.showMessageDialog (null, "Hello" + gênero + nome + lastName + ", seu imc é:" + imc + ", classificado como:" + classificação [3]);
        }
        
        

    } // GEN-LAST: event_jButtonStartActionPerformed

